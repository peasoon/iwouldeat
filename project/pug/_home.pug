mixin innerTabContent()
	//content
	.gctce-tabs__content.gctcet-content
		.gctcet-content__slider.gctcetc-slider 
			.swiper.gctcetc-slider__slider 
				.swiper-wrapper 
					+innerTabSlide(1)
					+innerTabSlide(2)
					+innerTabSlide(3)
	//end of content

mixin mainTabContent(title)
	//content
	.gc-tabs__content.gct-content 
		.gct-content__title= title
		.gct-content__count.gctc-count 
			.gctc-count__item.selected 3 блюда
			.gctc-count__item 4 блюда
			.gctc-count__item 5 блюд
			.gctc-count__item 6 блюд
		.gct-content__add.gctc-add 
			.gctc-add__item Добавить десерт (100 р/день) 
			.gctc-add__item Добавить напиток (50 р/день)
		.gct-content__example.gctc-example 
			.gctc-example__title Пример меню на день
			.gctc-example__tabs.gctce-tabs 
				.tabs.gctce-tabs__tabs
					p.tabs-day.dayContainer
						span.menuDay Понедельник
					.tabs-headings.innerTabsHeadings
						.heading.selected Понедельник
						.heading Вторник
						.heading Среда
						.heading Четверг
						.heading Пятница
						.heading Суббота
						.heading Воскресенье
					.tabs-content
						.content.show
							+innerTabContent()
						.content 
							+innerTabContent()
						.content 
							+innerTabContent()
						.content 
							+innerTabContent()
						.content 
							+innerTabContent()
						.content 
							+innerTabContent()
						.content
							+innerTabContent()
			.gctc-example__bju.gctce-bju 
				.gctce-bju__title КБЖУ
				.gctce-bju__cal 2000
				.gctce-bju__b 99
				.gctce-bju__j 88
				.gctce-bju__u 187
	//end of content

mixin gcp-item(title, val1, val2, num)
	.gc-price__item.gcp-item
		.gcp-item__title= title
		label
			input(type="radio" name=`gcp-item__checkbox-${num}` value="5" checked)
			span.gcp-item__check.gcp-item__check-min= val1 
		label
			input(type="radio" name=`gcp-item__checkbox-${num}` value="20")
			span.gcp-item__check.gcp-item__check-max= val2


